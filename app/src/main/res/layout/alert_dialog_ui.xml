<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/common_xml"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.flippbidd.CustomClass.CustomTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="5dp"
                android:singleLine="true"
                android:text="Good Morning Urmil Malhotra"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_15sdp" />

            <com.flippbidd.CustomClass.CustomTextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/today_data_message"
                android:textColor="@color/color_black"
                android:textFontWeight="300"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relativeHomePage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/linearOtherView"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/button_ab_gradient">

            <com.flippbidd.CustomClass.CustomTextView
                android:id="@+id/textViewOfMessagesBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="HOME PAGE"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13sdp"
                app:font_type="font_medium" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeMyCalendar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/linearOtherView"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/button_ab_gradient">
            <!--android:background="@drawable/common_ract"
            android:backgroundTint="@color/text_color_dark_grey_"-->

            <com.flippbidd.CustomClass.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="MY CALENDAR"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13sdp"
                app:font_type="font_medium" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeMyMessages"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/linearOtherView"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:visibility="gone"
            android:background="@drawable/button_ab_gradient">

            <com.flippbidd.CustomClass.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="MY MESSAGES"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13sdp"
                app:font_type="font_medium" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>