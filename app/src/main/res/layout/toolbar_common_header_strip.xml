<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/color_white"
    android:elevation="@dimen/_7sdp">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_toolbar"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/menu"
                app:tint="@color/tint_color"
                android:visibility="invisible" />

            <com.flippbidd.CustomClass.CustomTextView
                android:id="@+id/txt_title_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image_toolbar"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone"
                app:font_type="font_regular" />

            <ImageView
                android:id="@+id/imageHeadreIcon"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/logo"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/imageRightItemList"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_list"
                android:padding="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_7sdp"
                app:tint="@color/tint_color"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageRightOfJV"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/new_filter"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivCreateNewChat"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/add_new_chat"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/viewRight_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageSubmitProperty"
                    android:layout_width="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/image3_toolbar"
                    android:src="@drawable/ic_white_cloud_upload"
                    app:tint="@color/tint_color"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/image3_toolbar"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/spark"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image3_toolbar"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/add"
                    app:tint="@color/tint_color"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewRight_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/image4_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:defaultQueryHint="Search.."
                    app:searchIcon="@drawable/ic_search" />

                <ImageView
                    android:id="@+id/image5_toolbar"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/sort"/>

                <ImageView
                    android:id="@+id/image6_toolbar"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/image3_toolbar"
                    android:scaleType="center"
                    android:src="@drawable/new_filter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewRight_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image5_share"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/image3_toolbar"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/share"
                    app:tint="@color/tint_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewRight_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_edit"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/image3_toolbar"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_edits"
                    app:tint="@color/tint_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewRight_delete_All_notification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_delete_notification"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/image3_toolbar"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_deletes"
                    app:tint="@color/tint_color" />


            </LinearLayout>

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

<!--    <include layout="@layout/info_dialog"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>