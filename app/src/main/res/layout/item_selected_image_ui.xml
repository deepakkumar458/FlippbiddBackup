<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:backgroundTint="@color/tvHintGrayColor"
        android:background="@drawable/normal_rect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.flippbidd.CustomClass.CustomTextView
            android:id="@+id/txtImageName"
            android:layout_toLeftOf="@+id/imageDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:singleLine="true"
            android:maxLength="100"
            android:textColor="@color/text_color"
            android:text="Image 1"
            app:font_type="font_semi_bold"/>

        <ImageView
            android:id="@+id/imageDelete"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@mipmap/ic_close"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>