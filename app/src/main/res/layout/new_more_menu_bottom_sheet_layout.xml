<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Request Contact-->
            <LinearLayout
                android:id="@+id/relative_menu_bottom_sheet_request_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <ImageView
                        android:id="@+id/imageContractBox"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/button_white_gradient"
                        android:backgroundTint="@color/red"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_contract" />

                </RelativeLayout>

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tv_menu_bottom_sheet_request_contract"
                    style="@style/TextViewMediumDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:padding="@dimen/medium_size"
                    android:text="Request Contract"
                    android:textColor="@color/text_color_dark_grey_"
                    app:font_type="font_regular" />
            </LinearLayout>


            <!--View Data Folder-->
            <LinearLayout
                android:id="@+id/relative_menu_bottom_sheet_view_data_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/button_white_gradient"
                        android:backgroundTint="@color/text_color_dark_grey_"
                        android:scaleType="center"
                        android:src="@drawable/folder" />

                </RelativeLayout>

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tv_menu_bottom_sheet_view_data_folder"
                    style="@style/TextViewMediumDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:padding="@dimen/medium_size"
                    android:text="Property Data"
                    android:textColor="@color/text_color_dark_grey_"
                    app:font_type="font_regular" />
            </LinearLayout>

            <!--Message User-->
            <!--<LinearLayout
                android:id="@+id/relative_menu_bottom_sheet_message_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/button_white_gradient"
                        android:backgroundTint="@color/text_color_dark_grey_"
                        android:scaleType="center"
                        android:src="@drawable/ic_chat_bubble_outline_24px" />

                </RelativeLayout>

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tv_menu_bottom_sheet_message_user"
                    style="@style/TextViewMediumDark"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="@dimen/medium_size"
                    android:text="Message User"
                    android:textColor="@color/text_color_dark_grey_"
                    app:font_type="font_regular" />
            </LinearLayout>-->

            <!--place Bidd-->
            <LinearLayout
                android:id="@+id/relative_menu_bottom_sheet_place_bidd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/button_white_gradient"
                        android:backgroundTint="@color/text_color_dark_grey_"
                        android:scaleType="center"
                        android:src="@drawable/ic_bidd" />

                </RelativeLayout>

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tv_menu_bottom_sheet_place_bidd"
                    style="@style/TextViewMediumDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:padding="@dimen/medium_size"
                    android:text="Place Bidd"
                    android:textColor="@color/text_color_dark_grey_"
                    app:font_type="font_regular" />
            </LinearLayout>

            <!--Share Property-->
            <LinearLayout
                android:id="@+id/relative_menu_bottom_sheet_share_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/button_white_gradient"
                        android:backgroundTint="@color/text_color_dark_grey_"
                        android:scaleType="center"
                        android:src="@mipmap/share"
                        app:tint="@color/white" />

                </RelativeLayout>

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tv_menu_bottom_sheet_share_property"
                    style="@style/TextViewMediumDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:padding="@dimen/medium_size"
                    android:text="Share Property"
                    android:textColor="@color/text_color_dark_grey_"
                    app:font_type="font_regular" />
            </LinearLayout>
            <!--Repoert Content-->
            <LinearLayout
                android:id="@+id/relative_menu_bottom_sheet_report_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_white_gradient"
                        android:backgroundTint="@color/text_color_dark_grey_"
                        android:scaleType="center"
                        android:src="@drawable/report" />

                </RelativeLayout>

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tv_menu_bottom_sheet_report_content"
                    style="@style/TextViewMediumDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:padding="@dimen/medium_size"
                    android:text="Report Content"
                    android:textColor="@color/text_color_dark_grey_"
                    app:font_type="font_regular" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_5sdp">

        <com.flippbidd.CustomClass.CustomTextView
            android:id="@+id/tv_menu_bottom_sheet_cancel"
            style="@style/TextViewMediumDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/medium_size"
            android:text="Cancel"
            android:textColor="@color/text_color_dark_grey_"
            app:font_type="font_bold" />
    </androidx.cardview.widget.CardView>


</LinearLayout>