<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:orientation="horizontal"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:background="?selectableItemBackground">



    <RelativeLayout
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_weight="0"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_selectable_user_list_profile"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.flippbidd.CustomClass.CustomTextView
            android:id="@+id/text_selectable_user_list_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#000000"/>

        <com.flippbidd.CustomClass.CustomTextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <com.flippbidd.CustomClass.CustomTextView
        android:id="@+id/text_user_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:text="Invite User"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>


    <CheckBox
        android:id="@+id/checkbox_selectable_user_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

</LinearLayout>