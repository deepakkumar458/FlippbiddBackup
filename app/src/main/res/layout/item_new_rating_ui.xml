<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentRatingMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rrView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.flippbidd.CustomClass.CustomTextView
            android:id="@+id/txtRateUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="John Doe"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/_12sdp"
            app:font_type="font_semi_bold"
            android:textFontWeight="600" />

        <com.flippbidd.CustomClass.CustomTextView
            android:id="@+id/txtRatingTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtRateUserName"
            android:layout_toRightOf="@+id/txtRateUserName"
            android:lineSpacingExtra="5dp"
            android:maxLines="1"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/grey_font"
            android:textSize="@dimen/_10sdp"
            app:font_type="font_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.flippbidd.CustomClass.CustomTextView
                android:id="@+id/txtUserRatingCount"
                android:layout_toRightOf="@+id/ivStart"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:text="4"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/_11sdp"
                app:font_type="font_bold"/>

            <ImageView
                android:id="@+id/ivStart"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/imageViewAdminProfile"
                android:src="@drawable/ic_baseline_star_24"/>


        </LinearLayout>

        <com.flippbidd.views.ShowMoreTextView
            android:id="@+id/txtRatingDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRateUserName"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/dummy_text"
            android:textColor="@color/Gray"
            android:textSize="@dimen/_10sdp" />

        <com.flippbidd.CustomClass.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRatingDescription"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_dark_grey_"
            android:textSize="@dimen/_8sdp"
            app:font_type="font_semi_bold"
            android:textFontWeight="600" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>