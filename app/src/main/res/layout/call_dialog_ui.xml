<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Request Contact-->
            <LinearLayout
                android:id="@+id/relative_menu_bottom_sheet_call_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/button_white_gradient"
                        android:backgroundTint="@color/text_color_dark_grey_"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/call_shadow_android" />

                </RelativeLayout>

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tv_call"
                    style="@style/TextViewMediumDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:padding="@dimen/medium_size"
                    android:text="Call Now"
                    android:textColor="@color/text_color_dark_grey_"
                    app:font_type="font_regular" />
            </LinearLayout>

            <!--View Data Folder-->
            <LinearLayout
                android:id="@+id/relative_menu_bottom_sheet_schedule_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/button_white_gradient"
                        android:backgroundTint="@color/text_color_dark_grey_"
                        android:scaleType="center"
                        android:src="@drawable/ic_calendar" />

                </RelativeLayout>

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tv_schedule"
                    style="@style/TextViewMediumDark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:padding="@dimen/medium_size"
                    android:text="Schedule Call"
                    android:textColor="@color/text_color_dark_grey_"
                    app:font_type="font_regular" />
            </LinearLayout>
            <!--View Bidd-->

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_5sdp">

        <com.flippbidd.CustomClass.CustomTextView
            android:id="@+id/tv_menu_bottom_sheet_cancel"
            style="@style/TextViewMediumDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/medium_size"
            android:text="Cancel"
            android:textColor="@color/text_color_dark_grey_"
            app:font_type="font_bold" />
    </androidx.cardview.widget.CardView>


</LinearLayout>