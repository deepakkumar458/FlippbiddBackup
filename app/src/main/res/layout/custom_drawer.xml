<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:padding="@dimen/_3sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_7sdp"
                android:gravity="center_vertical">

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tvTitle"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    app:font_type="font_regular" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeCounts"
                android:layout_width="@dimen/_20sdp"
                android:background="@drawable/round_counts"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_height="@dimen/_20sdp">

                <com.flippbidd.CustomClass.CustomTextView
                    android:id="@+id/tvCounts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:hint="0"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/_10sdp"
                    app:font_type="font_regular" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:layout_gravity="right"
            android:visibility="gone"
            android:layout_weight="0.6">

            <com.flippbidd.CustomClass.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_gradian"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_7sdp"
                android:gravity="center"
                android:alpha="0.7"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                app:font_type="font_regular" />
        </RelativeLayout>
        <!--<View
            android:id="@+id/viewSecondLine"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/colorWhite"
            android:visibility="invisible"></View>-->
    </LinearLayout>

</RelativeLayout>
